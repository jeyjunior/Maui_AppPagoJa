<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui_PagoJa.Views.Principal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pagesView="clr-namespace:Maui_PagoJa.Views"
    Title="InÃ­cio"
    IconImageSource="home.svg"
    Loaded="ContentPage_Loaded"
    Style="{StaticResource Key=PJ_ContentPage}">

    <Grid RowSpacing="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="130" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <Frame
            Grid.Row="0"
            BackgroundColor="Green"
            HorizontalOptions="FillAndExpand"
            Style="{StaticResource Key=PJ_FrameStandard}"
            VerticalOptions="FillAndExpand">
            <VerticalStackLayout>
                <Button
                    x:Name="GerarBoletosTeste"
                    Clicked="GerarBoletosTeste_Clicked"
                    Text="Gerar Boletos" />

                <Button
                    x:Name="ConsultarBoletos"
                    Clicked="ConsultarBoletos_Clicked"
                    Text="Consultas Boletos" />
            </VerticalStackLayout>
        </Frame>


        <Frame
            x:Name="fMain"
            Grid.Row="1"
            BackgroundColor="{StaticResource Cinza_05}"
            HorizontalOptions="FillAndExpand"
            Style="{StaticResource Key=PJ_FrameStandard}"
            VerticalOptions="FillAndExpand">
            <ScrollView>
                <VerticalStackLayout
                    x:Name="vStackMain"
                    Margin="0"
                    Padding="0"
                    Spacing="5" />
            </ScrollView>
        </Frame>


        <Frame
            Grid.Row="2"
            BackgroundColor="Chocolate"
            HorizontalOptions="FillAndExpand"
            Style="{StaticResource Key=PJ_FrameStandard}"
            VerticalOptions="FillAndExpand" />
    </Grid>
</ContentPage>
