<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui_PagoJa.Views.RegistroBoleto"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pagesView="clr-namespace:Maui_PagoJa.Views"
    Title="Registro"
    BackgroundColor="{StaticResource Gray950}"
    IconImageSource="doc_add_white.svg"
    Style="{StaticResource Key=PJ_ContentPage}">

    <Grid
        Margin="0"
        Padding="0"
        RowDefinitions="70, *, 60">

        <!--  Cabeçalho, conteúdo para filtros e pesquisas  -->
        <Grid
            Grid.Row="0"
            Margin="20,0,20,0"
            Padding="0"
            ColumnDefinitions="*">
            <Label
                Grid.Row="0"
                HorizontalOptions="StartAndExpand"
                Style="{StaticResource PJ_LabelWhite_Bold16}"
                Text="Registrar Boleto"
                VerticalOptions="Center" />
        </Grid>

        <!--  Conteúdo principal  -->
        <Frame
            x:Name="fMain"
            Grid.Row="1"
            BackgroundColor="{StaticResource Gray900}"
            BorderColor="{StaticResource Gray900}"
            Style="{StaticResource Key=PJ_FrameStandard}">

            <ScrollView>
                <Grid
                    Margin="0"
                    Padding="0"
                    ColumnDefinitions="20, *, 20"
                    RowDefinitions="25, 60, *, 60, *, 60, *, 60, *, 70, 25 ">

                    <!--  Nome Boleto  -->
                    <StackLayout
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0"
                        Padding="0"
                        Orientation="Vertical"
                        Spacing="10">
                        <Label Style="{StaticResource PJ_LabelWhite_Regular16}" Text="Nome Boleto" />
                        <Frame
                            Margin="0"
                            Padding="10,0,10,0"
                            BackgroundColor="#D1D1D1"
                            CornerRadius="6"
                            HeightRequest="50">
                            <Entry
                                Margin="0"
                                FontSize="20"
                                MaxLength="30"
                                TextColor="{StaticResource Gray950}"
                                VerticalOptions="CenterAndExpand" />
                        </Frame>
                    </StackLayout>

                    <!--  Valor Boleto  -->
                    <StackLayout
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="0"
                        Padding="0"
                        Orientation="Vertical"
                        Spacing="10">
                        <Label Style="{StaticResource PJ_LabelWhite_Regular16}" Text="Valor (R$)" />
                        <Frame
                            Margin="0"
                            Padding="10,0,10,0"
                            BackgroundColor="#D1D1D1"
                            CornerRadius="6"
                            HeightRequest="50">
                            <Entry
                                Margin="0"
                                FontSize="20"
                                MaxLength="30"
                                TextColor="{StaticResource Gray950}"
                                VerticalOptions="CenterAndExpand" />
                        </Frame>
                    </StackLayout>

                    <!--  Data Vencimento  -->
                    <StackLayout
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="0"
                        Padding="0"
                        Orientation="Vertical"
                        Spacing="10">
                        <Label Style="{StaticResource PJ_LabelWhite_Regular16}" Text="Data Vencimento" />
                        <Frame
                            Margin="0"
                            Padding="10,0,10,0"
                            BackgroundColor="#D1D1D1"
                            CornerRadius="6"
                            HeightRequest="50">
                            <Entry
                                Margin="0"
                                FontSize="20"
                                MaxLength="30"
                                TextColor="{StaticResource Gray950}"
                                VerticalOptions="CenterAndExpand" />
                        </Frame>
                    </StackLayout>

                    <!--  Repetir Mês  -->
                    <StackLayout
                        Grid.Row="7"
                        Grid.Column="1"
                        Margin="0"
                        Padding="0"
                        Orientation="Vertical"
                        Spacing="10">
                        <Label Style="{StaticResource PJ_LabelWhite_Regular16}" Text="Repetir (Mês)" />
                        <Frame
                            Margin="0"
                            Padding="10,0,10,0"
                            BackgroundColor="#D1D1D1"
                            CornerRadius="6"
                            HeightRequest="50">
                            <Entry
                                Margin="0"
                                FontSize="20"
                                MaxLength="30"
                                TextColor="{StaticResource Gray950}"
                                VerticalOptions="CenterAndExpand" />
                        </Frame>
                    </StackLayout>

                    <!--  Repetir Mês  -->
                    <StackLayout
                        Grid.Row="9"
                        Grid.Column="1"
                        Margin="0"
                        Padding="0"
                        Orientation="Vertical"
                        Spacing="10"
                        VerticalOptions="FillAndExpand">
                        <Button
                            HeightRequest="50"
                            ImageSource="save_blue.svg"
                            Style="{StaticResource PJ_ButtonPrimaryStandard}"
                            Text="Salvar"
                            VerticalOptions="EndAndExpand" />
                    </StackLayout>
                </Grid>

            </ScrollView>
        </Frame>

        <!--  Informações sobre conteúdo principal  -->
        <Frame
            Grid.Row="2"
            BackgroundColor="{StaticResource Gray950}"
            BorderColor="{StaticResource Gray950}"
            Style="{StaticResource Key=PJ_FrameStandard}">
            <Grid Margin="20,6,20,0" ColumnDefinitions="*, *">
                <Label
                    x:Name="lbl"
                    Grid.Column="0"
                    Style="{StaticResource Key=PJ_LabelSemiWhite_Light12}"
                    Text="Status"
                    VerticalOptions="Start" />
            </Grid>
        </Frame>

    </Grid>

</ContentPage>