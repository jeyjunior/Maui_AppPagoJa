<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="Maui_PagoJa.TabbedPageMenu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:pages="clr-namespace:Maui_PagoJa.Views"
    android:TabbedPage.ToolbarPlacement="Bottom"
    BackgroundColor="{StaticResource Gray950}"
    BarBackgroundColor="{StaticResource Gray950}"
    CurrentPageChanged="TabbedPage_CurrentPageChanged"
    FlexLayout.AlignSelf="Center"
    FlowDirection="MatchParent"
    SelectedTabColor="{StaticResource Primary}"
    UnselectedTabColor="{StaticResource White}">

    <pages:Principal x:Name="btnPrincipal" />
    <pages:RegistroBoleto />
    <pages:Configuracao />
</TabbedPage>